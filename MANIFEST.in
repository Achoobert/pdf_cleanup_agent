# MANIFEST.in - Include additional files in the distribution

# Documentation
include README.md
include LICENSE
include CHANGELOG.md
include BUILD_README.md

# Configuration files
include requirements.txt
include .env.example

# Data files
recursive-include data *.yml *.yaml *.json *.txt
recursive-include scripts/ui/icons *.png *.ico *.svg
recursive-include scripts/ui/styles *.qss *.css

# Build and deployment files
include scripts/build/*.sh
include scripts/build/*.bat
include .github/workflows/*.yml

# Exclude development files
exclude .gitignore
exclude .env
exclude *.pyc
exclude __pycache__
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * Thumbs.db

# Exclude test files from distribution
recursive-exclude scripts/tests *
exclude pytest.ini
exclude .pytest_cache

# Exclude IDE files
recursive-exclude * .vscode
recursive-exclude * .idea
recursive-exclude * *.swp
recursive-exclude * *.swo

# Exclude build artifacts
exclude build
exclude dist
recursive-exclude build *
recursive-exclude dist *